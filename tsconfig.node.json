{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.jsonc",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "lib/domain.ts",
    "scripts/*.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": ["node"],
    "lib": ["ES2023"],
    "module": "esnext",
    "moduleResolution": "bundler"
  }
}
