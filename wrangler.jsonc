  //     }
  //   ]
  // },
  "migrations": [
    // {
    //   "tag": "v1",
    //   "new_sqlite_classes": ["DomainDo"]
    // }
  ],

  "env": {
    "production": {
      "vars": {
        "ENVIRONMENT": "production",
        "DEMO_MODE": "true",
        "COMPANY_EMAIL": "motio@mail.com",
        "BETTER_AUTH_URL": "https://crrs-production.devxo.workers.dev",
        "AWS_SES_ENDPOINT": "https://email.us-east-1.amazonaws.com/v2/email/outbound-emails",
        "AWS_SES_REGION": "us-east-1"
      },
      "observability": {
        "enabled": true,
        "logs": {
          "invocation_logs": true,
          "head_sampling_rate": 1
        }
      },
      "d1_databases": [
        {
          "binding": "D1",
          "database_name": "crrs-d1-production",
          "database_id": "e65e0a2c-f8ef-4015-80c0-d2f5cacdf51e" // crrs-d1-production
        }
      ],
      "kv_namespaces": [
        {
          "binding": "KV",
          "id": "7ab5e04f8036473d9266c214d48fdbc2" // crrs-kv-production
        }
      ],
      "ratelimits": [
        {
          "name": "MAGIC_LINK_RATE_LIMITER",
          "namespace_id": "1001",
          "simple": {
            "limit": 5,
            "period": 60
          }
        }
      ],
